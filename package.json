{
  "name": "monorepo-nx",
  "version": "0.0.0",
  "packageManager": "yarn@4.0.2",
  "workspaces": [
    "packages/**/*",
    "services/**/*"
  ],
  "scripts": {
    "postinstall": "husky install",
    "prettier": "prettier --cache --write .",
    "lint": "eslint --cache --max-warnings=0 .",
    "format": "yarn prettier && yarn lint",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "nx build",
    "graph": "nx run-many --target=build --graph",
    "dev:all": "yarn dev:storybook & yarn dev:packages",
    "dev:storybook": "nx storybook @service/storybook",
    "dev:packages": "nx run-many --target=dev --projects='@package/react-components-*'"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-json-format": "^2.0.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-storybook": "^0.6.13",
    "husky": "^8.0.3",
    "nx": "^17.2.7",
    "prettier": "^3.0.3",
    "typescript": "^5.3.3"
  }
}
